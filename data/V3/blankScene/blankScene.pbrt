LookAt 0 0 0 0 0 1 0 1 0

Camera "perspective"
 "float fov" [30] 

Sampler "lowdiscrepancy" 
  "integer pixelsamples" [128] 

# filter
PixelFilter "gaussian" 
  "float alpha" [2] 
  "float xwidth" [2] 
  "float ywidth" [2] 

Film "image"
 "integer xresolution" [128]
  "integer yresolution" [128]

Integrator "path"
 "integer maxdepth" [1] 

WorldBegin

LightSource "distant" "spectrum L" ["D65.spd"] "point to" [0 0 100] "point from" [0 0 0]

WorldEnd
